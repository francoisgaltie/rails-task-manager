<div class="container text-center">
  <h1>All my tasks</h1>
</div>

<div class="container">
  <h3>
    Create a new task:
  </h3>
  <%= link_to "Create new task", new_task_path, :class => "btn btn-primary" %>
</div>

<hr>

<div class="container">
  <h3>
    Current tasks:
  </h3>
  <hr>
  <% @tasks.each do |task| %>
    <hr>
    <p><%= task.name %></p>
    <p>Done yet? <%= task.status %></p>
    <p><%= link_to "Show task details", task_path(task) %></p>
    <p><%= link_to "Edit task", edit_task_path(task) %></p>
    <p><%= link_to "Remove task", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %></p>
    <hr>
  <% end -%>
</div>

